{{#each this}}
<div class="title-wrapper margin-ver">
        <p class="title">{{header}}</p>
</div>

<ul class="nav nav-pills margin-ver" id="{{id}}" role="tablist">
    {{#each issues}}
    <li class="nav-item">
        <a class="nav-link" id="pills-{{this.title}}-tab" data-toggle="pill" href="#pills-{{this.title}}" role="tab" aria-controls="pills-{{this.title}}" aria-selected="true">{{this.loclizedTitle}}</a>
    </li>
    {{/each}}
</ul>

<div class="tab-content" id="pills-tabContent{{@index}}">
    {{#each issues}}
    <div class="tab-pane fade in" id="pills-{{this.title}}" role="tabpanel" aria-labelledby="pills-{{this.title}}-tab">

        <div id="{{this.title}}-content">{{this.content}}</div>

        <form class="form-inline">
            <div class="form-group margin-ver">
                <label for="{{this.title}}-maxRows" class="selectCount"></label>
                    <select id="{{this.title}}-maxRows" class="form-control selectRows" style="width:150px;">                                                       
                        <option value="10">10</option>                               
                        <option value="50">50</option>
                        <option value="75">75</option>
                        <option value="100">100</option>
                        <option value="0" class="showAll"></option>  
                    </select>
                    
                    <a class="margin-hor ExportCSVa form-control" href="#" style="width:120px;">
                        <span>
                            <span class="ExportCSV"></span>
                            <svg id="icon-download" width="16" height="16">
                                <path d="M21 2c0-1.1-.9-2-2-2H5C3.9 0 3 .9 3 2v20c0 1.1.9 2 2 2h8c.8 0 1.5-.3 2.1-.8l5.1-5.1c.5-.5.8-1.3.8-2.1V2zm-6 18.4V18h2.4L15 20.4zm3.7-3.7c-.2.2-.4.3-.7.3h-4v4c0 .3-.1.5-.3.7-.2.2-.4.3-.7.3H5V2h14v14c0 .3-.1.5-.3.7z"></path>
                                <path d="M13 13V7h-2v6H9l3 4 3-4"></path>
                            </svg>
                        </span>
                    </a>  
            </div>  
        </form>
        <table class="table table-hover table-bordered margin-ver" id="{{this.title}}">
                <thead>
                    <tr>
                        {{#each this.header}}
                            <th>{{this}}</th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each this.rows}}                                 
                        <tr>
                            {{#each this}}
                                <td class="text">{{{this}}}</td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <ul id="{{this.title}}-page" class="pagination"></ul>
    </div>
    {{/each}}
</div>
{{/each}}